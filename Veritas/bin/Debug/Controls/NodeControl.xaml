        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="90" Margin="0,155,-4,-4" VerticalAlignment="Top" Width="292" Opacity="0.6" Canvas.ZIndex="1"/>
        <TextBlock x:Name="nodeServerStatus" HorizontalAlignment="Left" Margin="10,218,0,0" TextWrapping="Wrap" Text="Server Status: Online" VerticalAlignment="Top" Canvas.ZIndex="2" Width="235" Height="16" FontSize="16" Opacity="0.8" Foreground="#FFD8D8D8"/>
    </Grid>
</UserControl>

